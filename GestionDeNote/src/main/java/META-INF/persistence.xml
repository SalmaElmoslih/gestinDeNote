<persistence 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	version="2.0">

    <persistence-unit name="NotPu" transaction-type="RESOURCE_LOCAL">
    
 		
 		
        <properties>
        
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/DbGestionDeNote"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <!-- Other properties as needed 
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            -->
 
            <property name="hibernate.hbm2ddl.auto" value="create"/>
             <property name="hibernate.ejb.entitymanager_factory_name" value="validate"/>
            
        </properties>

    </persistence-unit>

</persistence>
